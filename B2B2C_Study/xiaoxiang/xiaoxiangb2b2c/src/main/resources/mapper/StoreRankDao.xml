<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.xiaoxiangshop.dao.StoreRankDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="net.xiaoxiangshop.entity.StoreRank">
	    <result column="id" property="id" />
	    <result column="version" property="version" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_date" property="lastModifiedDate" />
        <result column="orders" property="order" />
        <result column="is_allow_register" property="isAllowRegister" />
        <result column="memo" property="memo" />
        <result column="name" property="name" />
        <result column="quantity" property="quantity" />
        <result column="service_fee" property="serviceFee" />
        <collection property="stores" select="net.xiaoxiangshop.dao.StoreDao.findSet" column="{attributeName=store_rank_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.StoreRank" fetchType="lazy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        version,
        created_date, last_modified_date, orders, is_allow_register, memo, name, quantity, service_fee, 'store_rank_id'
    </sql>
	
	<!-- 查找实体对象 -->
	<select id="find" parameterType="java.lang.Long" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`store_rank`
		WHERE
			`id` = #{id}
	</select>
	
	 <!-- 查找所有实体对象集合 -->
	<select id="findAll" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`store_rank`
	</select>
	
	<!-- 查找店铺等级 -->
    <select id="findList" resultMap="BaseResultMap">
    	SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`store_rank`
		<where>
			<if test="isAllowRegister != null">
				AND is_allow_register = #{isAllowRegister}
			</if>
			${ew.sqlSegment}
		</where>
    </select>
    
    <!-- 查找实体对象分页 -->
	<select id="selectPage" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`store_rank`
		<if test="ew.nonEmptyOfWhere == true">
			WHERE
		</if>
		${ew.sqlSegment}
	</select>
    
    <!-- 判断是否存在 -->
	<select id="exists" resultType="boolean">
		SELECT
			COUNT(1)
		FROM
			`store_rank`
		WHERE
			${attributeName} = #{attributeValue}
	</select>
	
	<!-- 判断是否唯一 -->
	<select id="unique" resultType="boolean">
		SELECT
			COUNT(1)
		FROM
			`store_rank`
		WHERE
			${attributeName } = #{attributeValue}
		<if test="id != null">
			AND id != #{id}
		</if>
	</select>
	
    <!-- 保存 -->
    <insert id="save" parameterType="net.xiaoxiangshop.entity.StoreRank">
   		INSERT INTO store_rank(
			id ,
			created_date ,
			version ,
			orders ,
			is_allow_register ,
			memo ,
			`name` ,
			quantity ,
			service_fee
		) VALUES (
			#{entity.id}, 
			#{entity.createdDate}, 
			#{entity.version}, 
			#{entity.order}, 
			#{entity.isAllowRegister}, 
			#{entity.memo}, 
			#{entity.name}, 
			#{entity.quantity}, 
			#{entity.serviceFee}
		)
  	</insert>
  	
  	<!-- 更新 -->
  	<update id="update" parameterType="net.xiaoxiangshop.entity.StoreRank">
    	UPDATE store_rank
		SET last_modified_date = #{entity.lastModifiedDate},
			version = #{entity.version} + 1,
			orders = #{entity.order},
			is_allow_register = #{entity.isAllowRegister},
			memo = #{entity.memo},
			`name` = #{entity.name},
			quantity = #{entity.quantity},
			service_fee = #{entity.serviceFee}
		WHERE
			id = #{entity.id}
		AND version = #{entity.version}
  	</update>
  
</mapper>
