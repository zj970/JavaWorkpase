/**index.wxss**/
swiper{
  width: 100%;
}
.swiper-item{
height: 100%;
width: 100%;
}
.nav-list{
  padding: 10px;
  display: flex;
  flex-flow: wrap;
  justify-content: space-between;
  /* 两侧对齐 */
}
/* 子集 */
.nav-list>view{
  width: 48%;
  text-align: center;
  font-size: 13px;
  color: #333;
  margin-bottom: 10px;
}
.nav-list image{
  width: 100%;
  height: 150px;
}
.recruit-list{
  padding: 0 10px;
}

.recruit-list>view{
  width: 100%;
  display:flex;
  margin-bottom: 10px;
}
.recruit-list>view>view{
  flex: 1;
  font-size: 13px;
}

.recruit-list>view image{
  width: 120px;
  height: 120px;
  border-radius: 10px;
  margin-right: 5px;
}
.recruit-list>view>view>view{
font-size: 15px;
font-weight: 600;
margin: 5px 0;
}
.buddyList{
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.buddyList image{
  width: 23%;
  height: 40px;
}