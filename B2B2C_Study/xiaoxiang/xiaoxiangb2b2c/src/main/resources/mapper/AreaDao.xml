<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.xiaoxiangshop.dao.AreaDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="net.xiaoxiangshop.entity.Area">
	    <result column="id" property="id" />
	    <result column="version" property="version" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_date" property="lastModifiedDate" />
        <result column="orders" property="order" />
        <result column="full_name" property="fullName" />
        <result column="grade" property="grade" />
        <result column="name" property="name" />
        <result column="tree_path" property="treePath" />
        <association property="parent" select="find" column="parent_id"  javaType="net.xiaoxiangshop.entity.Area" fetchType="lazy"/>
        <collection property="children" select="findSet" column="{attributeValue=id}" ofType="net.xiaoxiangshop.entity.Area" fetchType="lazy"/>
        <collection property="members" select="net.xiaoxiangshop.dao.MemberDao.findSet" column="{attributeName=area_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.Member" fetchType="lazy"/>
        <collection property="receivers" select="net.xiaoxiangshop.dao.ReceiverDao.findSet" column="{attributeName=area_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.Receiver" fetchType="lazy"/>
        <collection property="orders" select="net.xiaoxiangshop.dao.OrderDao.findSet" column="{attributeName=area_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.Order" fetchType="lazy"/>
        <collection property="deliveryCenters" select="net.xiaoxiangshop.dao.DeliveryCenterDao.findSet" column="{attributeName=area_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.DeliveryCenter" fetchType="lazy"/>
        <collection property="areaFreightConfigs" select="net.xiaoxiangshop.dao.AreaFreightConfigDao.findSet" column="{attributeName=area_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.AreaFreightConfig" fetchType="lazy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        version,
        created_date, last_modified_date, orders, full_name, grade, name, tree_path, parent_id, 'area_id'
    </sql>
	
	<!-- 查找实体对象 -->
	<select id="find" parameterType="Long" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			area
		WHERE
			id = #{id}
	</select>
	
	<!-- 查找所有实体对象集合 -->
	<select id="findAll" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`area` 
	</select>
	
	<!-- 根据属性查找实体对象 -->
	<select id="findByAttribute" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`area`
		WHERE
			${attributeName} = #{attributeValue}
	</select>
	
	<!-- 查找实体对象集合 -->
	<select id="findSet" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`area`
		WHERE
			parent_id = #{attributeValue}
	</select>
	
	<!-- 查找上级地区 -->
	<select id="findRoots" parameterType="int" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			area
		WHERE
			parent_id IS NULL
		ORDER BY
			orders ASC
		<if test="count != null">
			LIMIT 0, #{count}
		</if>
	</select>
	
	<!-- 查找上级地区 -->
	<select id="findParents" parameterType="map" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			area
		<if test="recursive == true">
			WHERE id IN 
		        <foreach collection="area.parentIds" item="ids" open="(" separator="," close=")" >
		        	#{ids}
		        </foreach>
		    ORDER BY grade ASC
	    </if>
	    <if test="recursive == false">
	    	WHERE id = #{area.parent.id}
	    </if>
	    <if test="count != null">
			LIMIT 0, #{count}
		</if>
	</select>
	
	<!-- 查找下级地区 -->
	<select id="findChildren" parameterType="map" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			area
		<if test="recursive == true">
			<if test="area != null">
				WHERE tree_path LIKE concat('%,',#{area.id},',%') ORDER BY grade ASC, orders ASC
	        </if>
	        <if test="area == null">
				ORDER BY grade ASC, orders ASC
	        </if>
	    </if>
	    <if test="recursive == false">
	    	WHERE parent_id = #{area.id} ORDER BY orders ASC
	    </if>
	    <if test="count != null">
			LIMIT 0, #{count}
		</if>
	</select>
	
	<!-- 保存 -->
	<insert id="save" parameterType="net.xiaoxiangshop.entity.Area">
	   INSERT INTO area (
			id ,
			created_date ,
			version ,
			orders ,
			grade ,
			name ,
			tree_path ,
			parent_id ,
			full_name
		) VALUES (
			#{entity.id}, 
			#{entity.createdDate},
			#{entity.version}, 
			#{entity.order}, 
			#{entity.grade}, 
			#{entity.name}, 
			#{entity.treePath}, 
			#{entity.parent.id}, 
			#{entity.fullName})
  	</insert>
  	
  	<!-- 更新 -->
  	<update id="update" parameterType="net.xiaoxiangshop.entity.Area">
    	UPDATE area
		SET last_modified_date = #{entity.lastModifiedDate},
			version = #{entity.version} + 1,
			orders = #{entity.order},
			grade = #{entity.grade},
			name = #{entity.name},
			tree_path = #{entity.treePath},
			parent_id = #{entity.parent.id},
			full_name = #{entity.fullName}
		WHERE
			id = #{entity.id}
		AND version = #{entity.version}
  	</update>



	<!-- 查找实体对象集合 -->
	<select id="findByLikeName" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List"></include>
		FROM
		`area`
		WHERE
		full_name  LIKE concat('%', #{likeName}, '%')
	</select>

</mapper>
