<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.xiaoxiangshop.dao.StoreCategoryDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="net.xiaoxiangshop.entity.StoreCategory">
	    <result column="id" property="id" />
	    <result column="version" property="version" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_date" property="lastModifiedDate" />
        <result column="orders" property="order" />
        <result column="bail" property="bail" />
        <result column="name" property="name" />
        <collection property="stores" select="net.xiaoxiangshop.dao.StoreDao.findSet" column="{attributeName=store_category_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.Store" fetchType="lazy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        version,
        created_date, last_modified_date, orders, bail, name, 'store_category_id'
    </sql>
	
	<!-- 查找实体对象 -->
	<select id="find" parameterType="java.lang.Long" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`store_category`
		WHERE
			`id` = #{id}
	</select>
	
	<!-- 查找所有实体对象集合 -->
	<select id="findAll" resultType="net.xiaoxiangshop.entity.StoreCategory">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`store_category`
	</select>
	
	<!-- 查找顶级店铺商品分类 -->
	<select id="findRoots" parameterType="int" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			`store_category`
		WHERE
			parent_id IS NULL
		ORDER BY
			orders ASC
		<if test="count != null">
			LIMIT 0, ${count}
		</if>
	</select>
	
	<!-- 查找上级商品分类 -->
	<select id="findParents" parameterType="map" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			`store_category`
		<if test="recursive == true">
			WHERE id IN 
			<if test="storeProductCategory.parentIds.length != 0">
		        <foreach collection="storeProductCategory.parentIds" item="ids" open="(" separator="," close=")" >
		        	#{ids}
		        </foreach>
			</if>
			<if test="storeProductCategory.parentIds.length == 0">
				('')
			</if>
		    ORDER BY grade ASC
	    </if>
	    <if test="recursive == false">
	    	WHERE id = #{storeProductCategory.parent.id}
	    </if>
	    <if test="count != null">
			LIMIT 0, ${count}
		</if>
	</select>
	
	<!-- 查找下级商品分类 -->
	<select id="findChildren" parameterType="map" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			`store_category`
		<if test="recursive == true">
			<if test="storeProductCategory != null">
				WHERE tree_path LIKE concat('%,',#{storeProductCategory.id},',%') ORDER BY grade ASC, orders ASC
	        </if>
	        <if test="storeProductCategory == null">
				ORDER BY grade ASC, orders ASC
	        </if>
	    </if>
	    <if test="recursive == false">
	    	WHERE parent_id = #{storeProductCategory.id} ORDER BY orders ASC
	    </if>
	    <if test="count != null">
			LIMIT 0, ${count}
		</if>
	</select>
	
	<!-- 查找实体对象分页 -->
	<select id="selectPage" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`store_category`
		<if test="ew.nonEmptyOfWhere == true">
			WHERE
		</if>
		${ew.sqlSegment}
	</select>
	
	<!-- 判断是否存在 -->
	<select id="exists" resultType="boolean">
		SELECT
			COUNT(1)
		FROM
			`store_category`
		WHERE
			${attributeName} = #{attributeValue}
	</select>
	
	<!-- 保存 -->
	<insert id="save" parameterType="net.xiaoxiangshop.entity.StoreCategory">
    	INSERT INTO store_category(
			id ,
			created_date ,
			version ,
			orders ,
			bail ,
			name
		)
		VALUES (
			#{entity.id}, 
			#{entity.createdDate}, 
			#{entity.version}, 
			#{entity.order},
			#{entity.bail}, 
			#{entity.name}
		)
  	</insert>
  	
  	<!-- 更新 -->
  	<update id="update" parameterType="net.xiaoxiangshop.entity.StoreCategory">
   		UPDATE store_category
		SET last_modified_date = #{entity.lastModifiedDate},
			version = #{entity.version} + 1,
			orders = #{entity.order},
			bail = #{entity.bail},
			name = #{entity.name}
		WHERE
			id = #{entity.id}
		AND version = #{entity.version}
  	</update>
  	
</mapper>
