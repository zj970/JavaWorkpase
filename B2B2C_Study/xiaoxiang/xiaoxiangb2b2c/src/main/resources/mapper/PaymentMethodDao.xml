<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.xiaoxiangshop.dao.PaymentMethodDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="net.xiaoxiangshop.entity.PaymentMethod">
	    <result column="id" property="id" />
	    <result column="version" property="version" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_date" property="lastModifiedDate" />
        <result column="orders" property="order" />
        <result column="content" property="content" />
        <result column="description" property="description" />
        <result column="icon" property="icon" />
        <result column="method" property="method" />
        <result column="name" property="name" />
        <result column="timeout" property="timeout" />
        <result column="type" property="type" />
        <collection property="shippingMethods" select="net.xiaoxiangshop.dao.ShippingMethodDao.findSet" column="{attributeName=payment_method_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.ShippingMethod" fetchType="lazy"/>
        <collection property="orders" select="net.xiaoxiangshop.dao.OrderDao.findSet" column="{attributeName=payment_method_id, attributeValue=id}" ofType="net.xiaoxiangshop.entity.Order" fetchType="lazy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        version,
        created_date, last_modified_date, orders, content, description, icon, method, name, timeout, type, 'payment_method_id'
    </sql>
	
	<!-- 查找实体对象 -->
	<select id="find" parameterType="java.lang.Long" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`payment_method` 
		WHERE
			`id` = #{id}
	</select>
	
	<!-- 查找所有实体对象集合 -->
	<select id="findAll" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`payment_method` 
	</select>
	
	<!-- 查找实体对象集合 -->
	<select id="findSet" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`payment_method`
		<if test="attributeName == 'shipping_method_id'">
			LEFT JOIN shipping_method_payment_method ON id = payment_methods_id
			WHERE 
				shipping_methods_id = #{attributeValue}
			ORDER BY
				`orders` ASC
		</if>
	</select>
	
	<!-- 查找实体对象分页 -->
	<select id="selectPage" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`payment_method`
		<if test="ew.nonEmptyOfWhere == true">
			WHERE
		</if>
		${ew.sqlSegment}
	</select>
	
	<!-- 保存 -->
	<insert id="save" parameterType="net.xiaoxiangshop.entity.PaymentMethod">
   		INSERT INTO payment_method(
			id ,
			created_date ,
			version ,
			orders ,
			description ,
			icon ,
			`method` ,
			`name` ,
			timeout ,
			`type` ,
			content
		) VALUES (
			#{entity.id}, 
			#{entity.createdDate}, 
			#{entity.version}, 
			#{entity.order}, 
			#{entity.description}, 
			#{entity.icon}, 
			#{entity.method}, 
			#{entity.name}, 
			#{entity.timeout}, 
			#{entity.type}, 
			#{entity.content}
		)
  	</insert>
  	
  	<!-- 更新 -->
  	<update id="update" parameterType="net.xiaoxiangshop.entity.PaymentMethod">
   		UPDATE payment_method
		SET last_modified_date = #{entity.lastModifiedDate},
			version = #{entity.version} + 1,
			orders = #{entity.order},
			description = #{entity.description},
			icon = #{entity.icon},
			`method` = #{entity.method},
			`name` = #{entity.name},
			timeout = #{entity.timeout},
			`type` = #{entity.type},
			content = #{entity.content}
		WHERE
			id = #{entity.id}
		AND version = #{entity.version}
  	</update>
  
</mapper>
